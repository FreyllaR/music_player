<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/linerLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="15dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/ivImage">
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/mtext"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:text="Название трека"
        app:layout_constraintBottom_toBottomOf="@+id/linerLayout2"
        app:layout_constraintLeft_toRightOf="@+id/linerLayout2"
        app:layout_constraintRight_toRightOf="@+id/linerLayout2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/butcheck"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/baseline_favorite_border_24"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </ImageButton>
</LinearLayout>